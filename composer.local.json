{
	"name": "citomni/http-skeleton",
	"description": "Baseline HTTP application skeleton for CitOmni (local dev).",
	"type": "project",
	"license": "MIT",
	"require": {
		"php": "^8.2",
		"citomni/kernel": "^1.0@dev",
		"citomni/http": "^1.0@dev"
	},
	"suggest": {
		"citomni/auth": "Add user management, login/register, forgot password, profile, etc.",
		"citomni/infrastructure": "Add lean infrastructure services (db, log, txt, mail, etc.)",
		"citomni/cli": "Add CLI mode if you need console commands alongside HTTP."
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"repositories": [
		{ "type": "path", "url": "../kernel", "options": { "symlink": true } },
		{ "type": "path", "url": "../http", "options": { "symlink": true } },
		{ "type": "path", "url": "../auth", "options": { "symlink": true } },
		{ "type": "path", "url": "../infrastructure", "options": { "symlink": true } }
	],
	"config": {
		"optimize-autoloader": true,
		"classmap-authoritative": true,
		"apcu-autoloader": true,
		"sort-packages": true
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"scripts": {
		"post-install-cmd": [
			"@composer dump-autoload -o"
		],
		"post-update-cmd": [
			"@composer dump-autoload -o"
		]
	}
}
